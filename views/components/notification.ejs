<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">

    <% if (success) { %>
      <div class="ui success message" id="successMessage">
        <p><%= success %></p>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="ui error message" id="errorMessage">
        <p><%= error %></p>
      </div>
    <% } %>

  </div>
</div>
